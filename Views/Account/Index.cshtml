                                        <div class="form-group">
                                            <label class="control-label col-md-2" for="Password">
                                                Contraseña
                                            </label>
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Contraseña", required = "required", pattern = "(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\\W).{8,}" } })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                <small class="text-danger">
                                                    La contraseña debe contener al menos 8 caracteres, incluyendo al menos una letra mayúscula, una letra minúscula, un número y un carácter especial.
                                                </small>
                                            </div>
                                        </div>

                                        <script>
                                            function validarPassword() {
                                                var password = document.getElementById("Password").value;
                                                var regex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{8,}$/;
                                                if (!regex.test(password)) {
                                                    alert("La contraseña debe contener al menos 8 caracteres, incluyendo al menos una letra mayúscula, una letra minúscula, un número y un carácter especial.");
                                                    return false;
                                                }
                                                return true;
                                            }

                                            // Opcional: Validar al enviar el formulario
                                            document.getElementById("formulario").addEventListener("submit", function (event) {
                                                if (!validarPassword()) {
                                                    event.preventDefault();
                                                }
                                            });
                                        </script>



