@model Khareedo.Models.Categories
@{
    ViewBag.Title = "Categoria";
    ViewBag.SubTitle = "Eliminar";
    Layout = "~/Views/ViewsA/shared/_Layout.cshtml";

}

<div>
    <div class="alert alert-danger">
        <strong>Advertencia!</strong> ¿Está seguro de que desea eliminar esta Categoria?
    </div>    <div>
        <h4>CategoryID: @Html.DisplayFor(model => model.CategoryID)</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Categoria
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

        </dl>
        @using (Html.BeginForm("Delete", "Categories", new { id = Model.CategoryID }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
    </div>
        }
    </div>
</div>
